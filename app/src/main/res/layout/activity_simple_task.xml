<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/taskTitleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Titre de la tâche"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

                <TextView
                    android:id="@+id/taskStatusText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Statut"
                    android:textSize="14sp"
                    android:textColor="#777777"
                    android:textStyle="bold"/>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/taskContextText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contexte de la tâche"
            android:textSize="14sp"
            android:textColor="#777777"
            android:layout_marginTop="8dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/taskDescriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description de la tâche"
            android:textSize="14sp"
            android:textColor="#777777"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/taskDurationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Durée : "
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/taskDurationValueText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 jours"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/taskDateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date de début : "
                android:textSize="12sp"
                android:layout_marginLeft="16dp"/>

            <TextView
                android:id="@+id/taskDateValueText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15/03/2023"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/taskUrlText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Site web : "
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/taskUrlValueText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="www.monsite.com"
                    android:textSize="12sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

                <Button
                    android:id="@+id/taskUrlButton"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="Go" />

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/taskEditButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modifier" />

        <Button
            android:id="@+id/taskRemoveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#6d071a"
            android:text="Supprimer" />

    </LinearLayout>
</LinearLayout>
